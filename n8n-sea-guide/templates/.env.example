# n8n Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# Authentication
# ========================================

# Admin credentials for n8n access
N8N_USER=admin
N8N_PASSWORD=your-secure-password-here

# ========================================
# Database Configuration
# ========================================

# PostgreSQL credentials
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your-postgres-password-here
POSTGRES_DB=n8n

# ========================================
# Server Configuration
# ========================================

# Host configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# For production with domain:
# N8N_HOST=n8n.yourcompany.com
# N8N_PROTOCOL=https
# WEBHOOK_URL=https://n8n.yourcompany.com

# ========================================
# Regional Settings
# ========================================

# Timezone for workflow scheduling
GENERIC_TIMEZONE=Asia/Singapore
# Options:
#   Asia/Singapore
#   Asia/Kuala_Lumpur
#   Asia/Jakarta
#   Asia/Bangkok
#   Asia/Manila

# ========================================
# Execution Settings
# ========================================

# How long to keep execution data (in hours)
EXECUTIONS_DATA_MAX_AGE=168  # 7 days

# Workflow timeout (in seconds)
EXECUTIONS_TIMEOUT=300  # 5 minutes

# Save execution data
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# ========================================
# Email Settings (Optional)
# ========================================

# For workflow email notifications
# N8N_EMAIL_MODE=smtp
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=your-email@gmail.com
# N8N_SMTP_PASS=your-gmail-app-password
# N8N_SMTP_SENDER=your-email@gmail.com

# ========================================
# Advanced Settings (Optional)
# ========================================

# Node.js memory limit (MB)
# NODE_OPTIONS=--max-old-space-size=2048

# Enable metrics endpoint
# N8N_METRICS=true

# Custom nodes directory
# N8N_CUSTOM_EXTENSIONS=/custom-nodes

# ========================================
# Integration API Keys (Optional)
# ========================================
# Store your integration API keys here if needed
# Reference in n8n credentials as: ${VARIABLE_NAME}

# OpenAI
# OPENAI_API_KEY=your-openai-key-here

# Google Cloud
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# AWS
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Twilio (SMS/WhatsApp)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token

# Telegram
# TELEGRAM_BOT_TOKEN=your-bot-token

# ========================================
# Security Notes
# ========================================
#
# - Never commit this file to git
# - Add .env to your .gitignore
# - Use strong passwords (12+ characters)
# - Rotate credentials every 90 days
# - Use environment-specific .env files (.env.dev, .env.prod)
#
# ========================================
