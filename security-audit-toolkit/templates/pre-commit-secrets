#!/bin/bash
#
# Pre-commit hook for secret detection
#
# Installation:
#   cp pre-commit-secrets .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit
#
# Or install globally:
#   mkdir -p ~/.git-templates/hooks
#   cp pre-commit-secrets ~/.git-templates/hooks/pre-commit
#   chmod +x ~/.git-templates/hooks/pre-commit
#   git config --global init.templateDir ~/.git-templates
#

# Colors
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo "Running secret detection..."

# Patterns to detect
declare -a PATTERNS=(
    # OpenAI
    'sk-[a-zA-Z0-9]{20,}'

    # Anthropic
    'sk-ant-[a-zA-Z0-9-]{20,}'

    # AWS
    'AKIA[A-Z0-9]{16}'
    'aws_secret_access_key\s*=\s*[A-Za-z0-9/+=]{40}'

    # GitHub
    'ghp_[a-zA-Z0-9]{36}'
    'gho_[a-zA-Z0-9]{36}'
    'github_pat_[a-zA-Z0-9]{22}_[a-zA-Z0-9]{59}'

    # GitLab
    'glpat-[a-zA-Z0-9\-]{20}'

    # Slack
    'xox[baprs]-[a-zA-Z0-9]{10,48}'

    # Stripe
    'sk_live_[a-zA-Z0-9]{24,}'
    'rk_live_[a-zA-Z0-9]{24,}'

    # Twilio
    'SK[a-f0-9]{32}'

    # SendGrid
    'SG\.[a-zA-Z0-9]{22}\.[a-zA-Z0-9-_]{43}'

    # Mailgun
    'key-[a-zA-Z0-9]{32}'

    # Google
    'AIza[0-9A-Za-z\-_]{35}'

    # Notion
    'ntn_[a-zA-Z0-9]{40,}'
    'secret_[a-zA-Z0-9]{40,}'

    # Generic patterns
    'password\s*=\s*["\x27][^"\x27]{8,}["\x27]'
    'api[_-]?key\s*=\s*["\x27][^"\x27]{16,}["\x27]'
    'secret\s*=\s*["\x27][^"\x27]{16,}["\x27]'
    'token\s*=\s*["\x27][^"\x27]{16,}["\x27]'
)

# Check for .env files being committed
if git diff --cached --name-only | grep -qE '^\.env($|\.)'; then
    echo -e "${RED}ERROR: Attempting to commit .env file!${NC}"
    echo ""
    echo "Matched files:"
    git diff --cached --name-only | grep -E '^\.env($|\.)'
    echo ""
    echo "Remove from staging:"
    echo "  git reset HEAD <filename>"
    echo ""
    exit 1
fi

# Check staged changes for secrets
FOUND_SECRETS=0

for pattern in "${PATTERNS[@]}"; do
    MATCHES=$(git diff --cached -G"$pattern" --name-only 2>/dev/null)
    if [ -n "$MATCHES" ]; then
        if [ $FOUND_SECRETS -eq 0 ]; then
            echo -e "${RED}ERROR: Potential secrets detected in staged changes!${NC}"
            echo ""
        fi
        FOUND_SECRETS=1
        echo -e "${YELLOW}Pattern:${NC} $pattern"
        echo "Files:"
        echo "$MATCHES" | sed 's/^/  /'
        echo ""
    fi
done

if [ $FOUND_SECRETS -eq 1 ]; then
    echo "Please remove secrets before committing."
    echo ""
    echo "Options:"
    echo "  1. Remove the secret from the file"
    echo "  2. Use environment variables instead"
    echo "  3. If false positive, commit with: git commit --no-verify"
    echo ""
    exit 1
fi

echo "No secrets detected. Proceeding with commit."
exit 0
